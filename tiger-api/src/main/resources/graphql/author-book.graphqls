# ------
# Tiger

type Tiger {
    id: ID!
    name: String!
    dateOfBirth: String!
    lastSeen: String!
    lastSeenCoordinates: String!
}

input CreateTigerInput {
    name: String!
    dateOfBirth: String!
    lastSeen: String!
    lastSeenCoordinates: String!
}


# ---

type Query {
    getAllTigers: [Tiger!]!
}

# ---

type Mutation {
    createTiger(tigerInput: CreateTigerInput!): Tiger!
}